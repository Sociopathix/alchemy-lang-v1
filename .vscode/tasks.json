{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cpp.exe build active file",
			"command": "C:\\cygwin64\\bin\\cpp.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}\\Lexer.cpp",
				//"${fileDirname}\\Lexer.hpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\cygwin64\\bin\\cpp.exe"
		}
	]
